
@{
    ViewData["Title"] = "Index";
}

@model List<CourseViewModel>


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Courses</h5>
                <a asp-asp-controller="Course" asp-action="Create" class="btn btn-primary mb-3">Create Course</a>

                @if(Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Picture</th>
                                <th>Course Name</th>
                                <th>Price</th>
                                <th>Duration</th>
                                <th>Category</th>
                                <th colspan="2 ">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><img src="@item.StockPictureUrl" class="img-thumbnail" width="72px" /></td>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.Feature.Duration</td>
                                    <td>@item.Category.Name</td>
                                    <td><a asp-controller="Course" asp-action="Update" asp-route-id="@item.Id" class="btn btn-sm btn-success">Update</a></td>
                                    <td><a asp-controller="Course" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">Registered Course Not Found</div>
                }
            </div>
        </div>
    </div>
</div>

