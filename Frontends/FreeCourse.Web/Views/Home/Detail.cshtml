@{
    ViewData["Title"] = "Detail";
}

@model CourseViewModel

<div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <img src="@Model.StockPictureUrl" class="card-img-top" />

            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Price : $@Model.Price</div>

                <a href="#" class="btn btn-outline-primary w-100">Add To Basket</a>
            </div>
        </div>
    </div>

</div>

