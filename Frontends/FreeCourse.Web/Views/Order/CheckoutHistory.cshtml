@{
    ViewData["Title"] = "CheckoutHistory";
}

@model List<OrderViewModel>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Payment History</h5>

                @if (Model.Any())
                {


                    <table class="table table-striped table-bordered">

                        <tr>
                            <th>Payment No</th>
                            <th>Payment Date</th>
                            <th>Details</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.CreatedDate</td>
                                <td>
                                    <table class="table table-striped">
                                        <tr>
                                            <td class="col-md-6 bg-secondary text-light border border-dark">Course Name</td>
                                            <td class="col-md-6 bg-secondary text-light border border-dark">Course Price</td>
                                        </tr>

                                        @foreach (var orderItem in item.OrderItems)
                                        {
                                            <tr>
                                                <td>@orderItem.ProductName</td>
                                                <td>$@orderItem.Price</td>
                                            </tr>
                                        }

                                    </table>

                                </td>
                            </tr>
                        }


                    </table>
                }
                else
                {
                    <div class="alert alert-info">There is no course you purchased.</div>
                }

            </div>
        </div>
    </div>
</div>


